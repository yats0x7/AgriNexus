import React, { useState, useEffect } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { Sprout, MapPin, Calendar, Star, ExternalLink } from 'lucide-react';
import { SeedVariety } from '@/entities/SeedVariety';

export default function SeedSuggestionWidget({ 
    state = "Punjab", 
    district = "Ludhiana", 
    soilType = "", 
    season = "",
    maxResults = 3,
    embedSiteId = null 
}) {
    const [seeds, setSeeds] = useState([]);
    const [isLoading, setIsLoading] = useState(false);

    useEffect(() => {
        const fetchSeeds = async () => {
            setIsLoading(true);
            try {
                let filters = { state, district };
                if (soilType) filters.soil_suitability = soilType;
                if (season) filters.recommended_season = season;
                
                const seedData = await SeedVariety.filter(filters);
                const sortedSeeds = seedData
                    .sort((a, b) => (b.suitability_score || 0) - (a.suitability_score || 0))
                    .slice(0, maxResults);
                
                setSeeds(sortedSeeds);
            } catch (error) {
                console.error("Error fetching seeds:", error);
            }
            setIsLoading(false);
        };

        fetchSeeds();
    }, [state, district, soilType, season, maxResults]);

    const getAvailabilityColor = (status) => {
        const colors = {
            InStock: "bg-green-100 text-green-800",
            Limited: "bg-yellow-100 text-yellow-800", 
            OutOfStock: "bg-red-100 text-red-800"
        };
        return colors[status] || colors.OutOfStock;
    };

    return (
        <Card className="shadow-lg bg-white">
            <CardHeader>
                <CardTitle className="flex items-center gap-2 text-lg">
                    <Sprout className="w-5 h-5 text-lime-600" />
                    Recommended Seeds
                </CardTitle>
                <div className="flex items-center gap-2 text-sm text-gray-600">
                    <MapPin className="w-4 h-4" />
                    <span>{district}, {state}</span>
                </div>
            </CardHeader>
            <CardContent className="space-y-4">
                {isLoading ? (
                    <div className="text-center py-6">
                        <div className="animate-pulse space-y-2">
                            <div className="h-4 bg-gray-200 rounded w-3/4 mx-auto"></div>
                            <div className="h-4 bg-gray-200 rounded w-1/2 mx-auto"></div>
                        </div>
                    </div>
                ) : seeds.length > 0 ? (
                    <div className="space-y-3">
                        {seeds.map((seed, index) => (
                            <div key={seed.id} className="p-3 border border-gray-200 rounded-lg hover:border-lime-300 transition-colors">
                                <div className="flex justify-between items-start mb-2">
                                    <div>
                                        <h4 className="font-semibold text-gray-800">{seed.crop_name}</h4>
                                        <p className="text-sm text-gray-600">{seed.variety}</p>
                                    </div>
                                    <div className="text-right space-y-1">
                                        <Badge className="bg-lime-100 text-lime-800 text-xs">
                                            <Star className="w-3 h-3 mr-1" />
                                            {seed.suitability_score}%
                                        </Badge>
                                        <Badge className={`${getAvailabilityColor(seed.availability_status)} text-xs`}>
                                            {seed.availability_status}
                                        </Badge>
                                    </div>
                                </div>
                                
                                <div className="flex items-center justify-between text-xs text-gray-500">
                                    <span className="flex items-center gap-1">
                                        <Calendar className="w-3 h-3" />
                                        {seed.recommended_season}
                                    </span>
                                    <span>â‚¹{seed.price}/{seed.unit}</span>
                                </div>
                            </div>
                        ))}
                        
                        <Button 
                            asChild
                            variant="outline" 
                            className="w-full mt-4 border-lime-500 text-lime-700 hover:bg-lime-50"
                        >
                            <a href="/pages/SeedsMarketplace" target="_blank">
                                <ExternalLink className="w-4 h-4 mr-2" />
                                View All Seeds
                            </a>
                        </Button>
                    </div>
                ) : (
                    <div className="text-center py-6 text-gray-500">
                        <Sprout className="w-8 h-8 mx-auto mb-2 opacity-50" />
                        <p className="text-sm">No seeds available for current criteria</p>
                    </div>
                )}
                
                <div className="text-xs text-gray-400 text-center pt-2 border-t">
                    Data from SeedNet & Kisan Suvidha
                </div>
            </CardContent>
        </Card>
    );
}